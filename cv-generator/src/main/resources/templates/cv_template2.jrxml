<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="cv template3" pageWidth="595" pageHeight="842" columnWidth="595"
              leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">


    <style name="HeaderNameStyle" fontSize="28" isBold="true" forecolor="#FFFFFF"/>
    <style name="HeaderSubtitleStyle" fontSize="14" forecolor="#E5E7EB"/>
    <style name="HeaderContactStyle" fontSize="11" forecolor="#E5E7EB"/>
    <style name="SectionHeaderStyle" fontSize="16" isBold="true" forecolor="#1F2937"/>
    <style name="BodyText" fontSize="11" forecolor="#1F2937"/>
    <style name="CompanyStyle" fontSize="13" isBold="true" forecolor="#1F2937"/>
    <style name="TitleStyle" fontSize="12" forecolor="#3B82F6"/>
    <style name="DateStyle" fontSize="11" isItalic="true" forecolor="#6B7280"/>
    <style name="BulletStyle" fontSize="11" forecolor="#1F2937"/>


    <parameter name="name" class="java.lang.String"/>
    <parameter name="professionalTitle" class="java.lang.String"/>
    <parameter name="email" class="java.lang.String"/>
    <parameter name="phone" class="java.lang.String"/>
    <parameter name="address" class="java.lang.String"/>
    <parameter name="profile" class="java.lang.String"/>


    <parameter name="company1" class="java.lang.String"/>
    <parameter name="position1" class="java.lang.String"/>
    <parameter name="dates1" class="java.lang.String"/>
    <parameter name="achievements1" class="java.lang.String"/>


    <parameter name="university1" class="java.lang.String"/>
    <parameter name="degree1" class="java.lang.String"/>
    <parameter name="year1" class="java.lang.String"/>
    <parameter name="diploma" class="java.lang.String"/>

    <parameter name="skills" class="java.lang.String"/>

    <background>
        <band height="0"/>
    </background>


    <title>
        <band height="100">
            <rectangle>
                <reportElement x="0" y="0" width="595" height="100" backcolor="#1F2937"/>
            </rectangle>

            <textField>
                <reportElement x="20" y="15" width="555" height="40" style="HeaderNameStyle"/>
                <textFieldExpression><![CDATA[$P{name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="55" width="555" height="20" style="HeaderSubtitleStyle"/>
                <textFieldExpression><![CDATA[$P{professionalTitle}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="20" y="75" width="555" height="20" style="HeaderContactStyle"/>
                <textFieldExpression><![CDATA[
                    ($P{address} != null && !$P{address}.trim().equals("") ? $P{address} + " | " : "") +
                    ($P{phone} != null && !$P{phone}.trim().equals("") ? $P{phone} + " | " : "") +
                    ($P{email} != null && !$P{email}.trim().equals("") ? $P{email} : "")
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>


    <detail>
        <band height="720">


            <rectangle><reportElement x="0" y="0" width="595" height="25" backcolor="#F3F4F6"/></rectangle>
            <rectangle><reportElement x="20" y="22" width="100" height="2" backcolor="#3B82F6"/></rectangle>
            <staticText><reportElement x="20" y="0" width="555" height="25" style="SectionHeaderStyle"/><text>Profile</text></staticText>
            <textField isStretchWithOverflow="true">
                <reportElement x="20" y="30" width="555" height="40" style="BodyText"/>
                <textFieldExpression><![CDATA[$P{profile}]]></textFieldExpression>
            </textField>


            <rectangle><reportElement x="0" y="80" width="595" height="25" backcolor="#F3F4F6"/></rectangle>
            <rectangle><reportElement x="20" y="102" width="100" height="2" backcolor="#3B82F6"/></rectangle>
            <staticText><reportElement x="20" y="80" width="555" height="25" style="SectionHeaderStyle"/><text>Experience</text></staticText>

            <textField><reportElement x="20" y="110" width="555" height="20" style="CompanyStyle"/><textFieldExpression><![CDATA[$P{company1}]]></textFieldExpression></textField>
            <textField><reportElement x="20" y="130" width="555" height="20" style="TitleStyle"/><textFieldExpression><![CDATA[$P{position1}]]></textFieldExpression></textField>
            <textField><reportElement x="20" y="150" width="555" height="20" style="DateStyle"/><textFieldExpression><![CDATA[$P{dates1}]]></textFieldExpression></textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="40" y="170" width="535" height="60" style="BulletStyle"/>
                <textFieldExpression><![CDATA[$P{achievements1} != null ? "• " + $P{achievements1}.replaceAll("\\n", "\n• ") : ""]]></textFieldExpression>
            </textField>


            <rectangle><reportElement x="0" y="260" width="595" height="25" backcolor="#F3F4F6"/></rectangle>
            <rectangle><reportElement x="20" y="282" width="100" height="2" backcolor="#3B82F6"/></rectangle>
            <staticText><reportElement x="20" y="260" width="555" height="25" style="SectionHeaderStyle"/><text>Education</text></staticText>

            <textField><reportElement x="20" y="290" width="555" height="20" style="CompanyStyle"/><textFieldExpression><![CDATA[$P{university1}]]></textFieldExpression></textField>
            <textField><reportElement x="20" y="310" width="555" height="20" style="TitleStyle"/><textFieldExpression><![CDATA[$P{degree1}]]></textFieldExpression></textField>
            <textField><reportElement x="20" y="330" width="555" height="20" style="DateStyle"/><textFieldExpression><![CDATA[$P{year1}]]></textFieldExpression></textField>
            <textField><reportElement x="20" y="350" width="555" height="20" style="BodyText"/><textFieldExpression><![CDATA["Diploma: " + $P{diploma}]]></textFieldExpression></textField>


            <rectangle><reportElement x="0" y="390" width="595" height="25" backcolor="#F3F4F6"/></rectangle>
            <rectangle><reportElement x="20" y="412" width="100" height="2" backcolor="#3B82F6"/></rectangle>
            <staticText><reportElement x="20" y="390" width="555" height="25" style="SectionHeaderStyle"/><text>Skills And Abilities</text></staticText>

            <textField isStretchWithOverflow="true">
                <reportElement x="40" y="420" width="535" height="60" style="BulletStyle"/>
                <textFieldExpression><![CDATA[$P{skills} != null ? "• " + $P{skills}.replaceAll(",\\s*", "\n• ") : ""]]></textFieldExpression>
            </textField>

        </band>
    </detail>
</jasperReport>