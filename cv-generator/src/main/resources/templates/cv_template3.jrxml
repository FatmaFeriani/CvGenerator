<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="cv_template4" pageWidth="595" pageHeight="842" columnWidth="595"
              leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="10">

    <style name="HeaderNameStyle" fontSize="26" isBold="true" forecolor="#1A1A1A" vAlign="Middle" hTextAlign="Center"/>
    <style name="HeaderSubtitleStyle" fontSize="14" isBold="false" forecolor="#4A4A4A" hTextAlign="Center"/>
    <style name="HeaderContactStyle" fontSize="9" isBold="false" forecolor="#6A6A6A" hTextAlign="Center"/>
    <style name="SectionHeaderStyle" fontSize="12" isBold="true" forecolor="#1A1A1A" vAlign="Middle" hTextAlign="Center"/>
    <style name="BodyText" fontSize="10" forecolor="#2C2C2C" hTextAlign="Left"/>
    <style name="CompanyStyle" fontSize="12" isBold="true" forecolor="#1A1A1A" hTextAlign="Left"/>
    <style name="TitleStyle" fontSize="11" isBold="false" forecolor="#5A5A5A" hTextAlign="Left"/>
    <style name="DateStyle" fontSize="9" isItalic="true" forecolor="#7A7A7A" hTextAlign="Left"/>
    <style name="BulletStyle" fontSize="9" forecolor="#3A3A3A" hTextAlign="Left"/>
    <style name="AccentLineStyle" fontSize="9" forecolor="#D0D0D0"/>

    <parameter name="name" class="java.lang.String"/>
    <parameter name="professionalTitle" class="java.lang.String"/>
    <parameter name="email" class="java.lang.String"/>
    <parameter name="phone" class="java.lang.String"/>
    <parameter name="address" class="java.lang.String"/>
    <parameter name="profile" class="java.lang.String"/>
    <parameter name="company1" class="java.lang.String"/>
    <parameter name="position1" class="java.lang.String"/>
    <parameter name="dates1" class="java.lang.String"/>
    <parameter name="achievements1" class="java.lang.String"/>
    <parameter name="company2" class="java.lang.String"/>
    <parameter name="position2" class="java.lang.String"/>
    <parameter name="dates2" class="java.lang.String"/>
    <parameter name="achievements2" class="java.lang.String"/>
    <parameter name="university1" class="java.lang.String"/>
    <parameter name="degree1" class="java.lang.String"/>
    <parameter name="year1" class="java.lang.String"/>
    <parameter name="diploma1" class="java.lang.String"/>
    <parameter name="university2" class="java.lang.String"/>
    <parameter name="degree2" class="java.lang.String"/>
    <parameter name="year2" class="java.lang.String"/>
    <parameter name="diploma2" class="java.lang.String"/>
    <parameter name="skills" class="java.lang.String"/>

    <background>
        <band height="0"/>
    </background>

    <title>
        <band height="100">
            <rectangle radius="6">
                <reportElement x="0" y="0" width="595" height="100" backcolor="#E8F5E9"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#C0C0C0"/>
                </graphicElement>
            </rectangle>

            <textField>
                <reportElement x="30" y="15" width="535" height="35" style="HeaderNameStyle"/>
                <textFieldExpression><![CDATA[$P{name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="30" y="50" width="535" height="20" style="HeaderSubtitleStyle"/>
                <textFieldExpression><![CDATA[$P{professionalTitle}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="30" y="75" width="535" height="15" style="HeaderContactStyle"/>
                <textFieldExpression><![CDATA[
                    ($P{address} != null && !$P{address}.trim().equals("") ? $P{address} + "  •  " : "") +
                    ($P{phone} != null && !$P{phone}.trim().equals("") ? $P{phone} + "  •  " : "") +
                    ($P{email} != null && !$P{email}.trim().equals("") ? $P{email} : "")
                ]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="99" width="595" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.6" lineColor="#2A665A"/>
                </graphicElement>
            </line>
        </band>
    </title>

    <detail>
        <band height="720" splitType="Stretch">
            <rectangle radius="6">
                <reportElement x="0" y="0" width="595" height="20" backcolor="#F2F3F5"/>
                <graphicElement>
                    <pen lineWidth="0.4" lineColor="#C0C0C0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="30" y="0" width="535" height="20" style="SectionHeaderStyle"/>
                <text><![CDATA[PROFESSIONAL PROFILE]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="23" width="595" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.6" lineColor="#2A665A"/>
                </graphicElement>
            </line>
            <textField isStretchWithOverflow="true">
                <reportElement x="30" y="30" width="535" height="40" style="BodyText"/>
                <textFieldExpression><![CDATA[$P{profile}]]></textFieldExpression>
            </textField>

            <rectangle radius="6">
                <reportElement x="0" y="80" width="595" height="20" backcolor="#F2F3F5"/>
                <graphicElement>
                    <pen lineWidth="0.4" lineColor="#C0C0C0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="30" y="80" width="535" height="20" style="SectionHeaderStyle"/>
                <text><![CDATA[PROFESSIONAL EXPERIENCE]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="103" width="595" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.6" lineColor="#2A665A"/>
                </graphicElement>
            </line>

            <textField>
                <reportElement x="30" y="115" width="535" height="20" style="CompanyStyle"/>
                <textFieldExpression><![CDATA[$P{company1}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="135" width="535" height="18" style="DateStyle"/>
                <textFieldExpression><![CDATA[$P{dates1}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="155" width="535" height="18" style="TitleStyle"/>
                <textFieldExpression><![CDATA[$P{position1}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="30" y="175" width="535" height="50" style="BulletStyle"/>
                <textFieldExpression><![CDATA[$P{achievements1} != null ? "• " + $P{achievements1}.replaceAll("\\n", "\n• ") : ""]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="30" y="235" width="535" height="20" style="CompanyStyle"/>
                <textFieldExpression><![CDATA[$P{company2}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="255" width="535" height="18" style="DateStyle"/>
                <textFieldExpression><![CDATA[$P{dates2}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="275" width="535" height="18" style="TitleStyle"/>
                <textFieldExpression><![CDATA[$P{position2}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement x="30" y="295" width="535" height="50" style="BulletStyle"/>
                <textFieldExpression><![CDATA[$P{achievements2} != null ? "• " + $P{achievements2}.replaceAll("\\n", "\n• ") : ""]]></textFieldExpression>
            </textField>

            <rectangle radius="6">
                <reportElement x="0" y="355" width="595" height="20" backcolor="#F2F3F5"/>
                <graphicElement>
                    <pen lineWidth="0.4" lineColor="#C0C0C0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="30" y="355" width="535" height="20" style="SectionHeaderStyle"/>
                <text><![CDATA[EDUCATION]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="378" width="595" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.6" lineColor="#2A665A"/>
                </graphicElement>
            </line>

            <textField>
                <reportElement x="30" y="390" width="535" height="20" style="CompanyStyle"/>
                <textFieldExpression><![CDATA[$P{university1}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="410" width="535" height="18" style="DateStyle"/>
                <textFieldExpression><![CDATA[$P{year1}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="430" width="535" height="18" style="TitleStyle"/>
                <textFieldExpression><![CDATA[$P{degree1}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="450" width="535" height="16" style="BodyText"/>
                <textFieldExpression><![CDATA["Major: " + $P{diploma1}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="30" y="475" width="535" height="20" style="CompanyStyle"/>
                <textFieldExpression><![CDATA[$P{university2}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="495" width="535" height="18" style="DateStyle"/>
                <textFieldExpression><![CDATA[$P{year2}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="515" width="535" height="18" style="TitleStyle"/>
                <textFieldExpression><![CDATA[$P{degree2}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="30" y="535" width="535" height="16" style="BodyText"/>
                <textFieldExpression><![CDATA["Major: " + $P{diploma2}]]></textFieldExpression>
            </textField>

            <rectangle radius="6">
                <reportElement x="0" y="560" width="595" height="20" backcolor="#F2F3F5"/>
                <graphicElement>
                    <pen lineWidth="0.4" lineColor="#C0C0C0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="30" y="560" width="535" height="20" style="SectionHeaderStyle"/>
                <text><![CDATA[CORE COMPETENCIES]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="583" width="595" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.6" lineColor="#2A665A"/>
                </graphicElement>
            </line>
            <textField isStretchWithOverflow="true">
                <reportElement x="30" y="595" width="535" height="70" style="BulletStyle"/>
                <textFieldExpression><![CDATA[$P{skills} != null ? "• " + $P{skills}.replaceAll(",\\s*", "\n• ") : ""]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>
